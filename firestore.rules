rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. CONFIGURATIONS GLOBALES (Nissab, Prix de l'or) ---
    // Collection: configurations/daily_values
    match /configurations/{document} {
      // Tout le monde peut lire pour voir le Nissab (même sans compte)
      allow read: if true;
      // Personne ne peut modifier depuis l'application (sécurité)
      allow write: if false;
    }

    // --- 2. DONNÉES UTILISATEURS (Historique des calculs) ---
    // Collection: users/{userId}/zakat_calculations/...
    // Le {document=**} signifie "ce document et toutes ses sous-collections"
    match /users/{userId}/{document=**} {
      // L'utilisateur doit être connecté ET son ID doit correspondre à l'ID du document
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
  }
}
